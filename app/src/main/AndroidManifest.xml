<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaczmarek.bggapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.BggApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BggApplication"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".application.activities.UserCollectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.RankHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.UpdateBoardGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.InsertBoardGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.ImportGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.LocationDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.LocationListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".application.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>